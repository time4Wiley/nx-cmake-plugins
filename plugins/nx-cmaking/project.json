{
    "name": "nx-cmaking",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "plugins/nx-cmaking/src",
    "projectType": "library",
    "targets": {
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": [
                    "plugins/nx-cmaking/**/*.ts",
                    "plugins/nx-cmaking/package.json",
                    "plugins/nx-cmaking/generators.json",
                    "plugins/nx-cmaking/executors.json"
                ]
            },
            "configurations": {
                "ci": {
                    "maxWarnings": 0
                }
            }
        },
        "build": {
            "dependsOn": ["lint", "^build"],
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/plugins/nx-cmaking",
                "main": "plugins/nx-cmaking/src/index.ts",
                "external": "none",
                "tsConfig": "plugins/nx-cmaking/tsconfig.lib.json",
                "assets": [
                    "plugins/nx-cmaking/*.md",
                    "LICENSE",
                    {
                        "input": "./plugins/nx-cmaking/src",
                        "glob": "**/!(*.ts)",
                        "output": "./src"
                    },
                    {
                        "input": "./plugins/nx-cmaking/src",
                        "glob": "**/*.d.ts",
                        "output": "./src"
                    },
                    {
                        "input": "./plugins/nx-cmaking",
                        "glob": "generators.json",
                        "output": "."
                    },
                    {
                        "input": "./plugins/nx-cmaking",
                        "glob": "executors.json",
                        "output": "."
                    }
                ]
            },
            "configurations": {
                "ci": {}
            }
        },
        "test": {
            "dependsOn": ["build"],
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "plugins/nx-cmaking/jest.config.ts"
            },
            "configurations": {
                "ci": {
                    "coverageReporters": ["lcov"]
                }
            }
        },
        "publish": {
            "dependsOn": ["build"],
            "command": "nx upload verdaccio --name={projectName} --ver=0.0.0 --tag=latest"
        }
    },
    "implicitDependencies": ["verdaccio"],
    "tags": []
}
